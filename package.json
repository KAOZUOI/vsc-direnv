{
  "name": "vsc-direnv",
  "displayName": "vsc-direnv",
  "description": "Direnv integration for VSCode",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:.envrc"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "direnv.version",
        "title": "Direnv: Show Version"
      },
      {
        "command": "direnv.view",
        "title": "Direnv: View RC File"
      },
      {
        "command": "direnv.allow",
        "title": "Direnv: Allow RC File"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Direnv",
      "properties": {
        "direnv.path": {
          "type": "string",
          "default": "direnv",
          "description": "Path to the direnv executable"
        },
        "direnv.rcpath": {
          "type": "string",
          "description": "Full path to the rc file (e.g. .bashrc, .zshrc) instead of using .envrc in the workspace root"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "deploy": "npm run vscode:prepublish && npm run package",
    "start": "code --disable-extensions --extensionDevelopmentPath=${workspaceRoot}"
  },
  "devDependencies": {
    "@types/vscode": "^1.99.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/sinon": "^10.0.15",
    "@types/glob": "^7.2.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "mocha": "^10.2.0",
    "glob": "^8.1.0",
    "sinon": "^15.2.0"
  }
}
